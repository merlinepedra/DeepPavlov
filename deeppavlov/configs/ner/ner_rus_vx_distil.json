{
  "chainer": {
    "in": ["x"],
    "pipe": [
      {
        "class_name": "ner_chunker",
        "batch_size": 16,
        "max_chunk_len" : 180,
        "max_seq_len" : 300,
        "vocab_file": "{TRANSFORMER}",
        "in": ["x"],
        "out": ["x_chunk", "chunk_nums", "chunk_sentences_offsets", "chunk_sentences"]
      },
      {
        "thres_proba": 0.05,
        "o_tag": "O",
        "tags_file": "{NER_PATH}/tag.dict",
        "return_entities_with_tags": true,
        "class_name": "entity_detection_parser",
        "id": "edp"
      },
      {
        "class_name": "ner_chunk_model",
        "ner": {"config_path": "{CONFIGS_PATH}/ner/ner_rus_distilbert_torch.json"},
        "ner_parser": "#edp",
        "in": ["x_chunk", "chunk_nums", "chunk_sentences_offsets", "chunk_sentences"],
        "out": ["entity_substr", "entity_offsets", "tags", "sentences_offsets", "sentences", "probas", "status"]
      },
      {
        "class_name": "ner_postprocessor",
        "lemmatize": true,
        "in": ["x", "entity_substr", "entity_offsets", "tags", "sentences", "probas"],
        "out": ["new_entity_substr", "new_entity_lemm_substr", "new_entity_offsets", "new_entity_init_offsets", "new_tags", "new_probas"]
      }
    ],
    "out": ["new_entity_substr", "new_entity_lemm_substr", "new_entity_offsets", "new_entity_init_offsets", "new_tags",
            "sentences_offsets", "sentences", "new_probas", "status"]
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "CONFIGS_PATH": "{DEEPPAVLOV_PATH}/configs",
      "TRANSFORMER": "{DOWNLOADS_PATH}/torch_bert_models/distilrubert_tiny_cased_conversational",
      "NER_PATH": "{MODELS_PATH}/ner_rus_distilbert_torch"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/transformers.txt",
      "{DEEPPAVLOV_PATH}/requirements/pytorch16.txt",
      "{DEEPPAVLOV_PATH}/requirements/tf.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/entity_linking/ner_rus_distilbert_torch.tar.gz",
        "subdir": "{MODELS_PATH}/ner_rus_distilbert_torch"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/entity_linking/distilrubert_tiny_cased.tar.gz",
        "subdir": "{DOWNLOADS_PATH}/torch_bert_models/distilrubert_tiny_cased_conversational"
      }
    ]
  }
}
